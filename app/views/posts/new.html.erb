<%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div id="postResult">
  <h2 id="postTitle"></h2>
  <h2 id="postBody"></h2>
</div>

<script>
  $(function(){
    $("form").submit(function(event){
      event.preventDefault();
      var values = $(this).serialize();
      // the controller receives this post request and create the post
      // The resend the data as JSON
      var posting = $.post("/posts", values)

      // We're handling this JSON now
      posting.done(function(data){
        // console.log(data)
        var post = data;
        $("#postTitle").text(post["title"])
        $("#postBody").text(post["description"])
      })
    })
  })
</script>